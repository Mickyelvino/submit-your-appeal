#!groovy
@Library("Infrastructure@varfiles") _

properties([
  parameters([
    string(name: 'PRODUCT_NAME', defaultValue: 'sscs', description: ''),
    string(name: 'APP', defaultValue: 'tribunals-frontend', description: ''),
    string(name: 'TYPE', defaultValue: 'nodejs', description: ''),
    string(name: 'BRANCH', defaultvalue: 'master', description: ''),
    string(name: 'ENVIRONMENT', defaultValue: 'sandbox', description: 'Environment where code should be build and deployed'),
    choice(name: 'SUBSCRIPTION', choices: 'sandbox\nnonprod\nprod', description: 'Azure subscriptions available to build in')
  ]),
  [$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/submit-your-appeal', branch: params.BRANCH],
  pipelineTriggers([[$class: 'GitHubPushTrigger']])
])

withParameterizedPipeline(params.TYPE, params.PRODUCT_NAME, params.APP, params.ENVIRONMENT, params.SUBSCRIPTION) {

}
